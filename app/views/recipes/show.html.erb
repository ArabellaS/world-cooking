<div class="container">
  <br>
  <%= link_to root_path do %>
    <i class="fa-solid fa-house"></i>
  <% end %>
  <% if @recipe.photo.key? %>
    <%= cl_image_tag @recipe.photo.key, :width=>500, :crop=>"mfit", class: "img" %>
  <% else %>
    <%= image_tag "https://images.unsplash.com/photo-1555939594-58d7cb561ad1?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1374&q=80" %>
  <% end %>
  <div class="recipe-top">
    <div class= "name-recipe">
      <p><%= @recipe.name %></p>
    </div>
    <span>FROM</span>
    <div class= "place-recipe">
      <%= @recipe.place.country %>
    </div>
  </div>
  <div class="recipe-content">
    <p>Ingredients :</p>
    <small>
      <% @recipe.recipe_elements.each do |recipe_element|%>
        <% if recipe_element.amount != 0 %>
          <%= recipe_element.amount %>
          <%= recipe_element.unit %>
          <%= recipe_element.ingredient.name %>
          <br>
        <% end %>
      <% end %>
    </small>
    <p>Directions :</p>
    <% @recipe.content.split('STEP')[1..].each do |step| %>
      <p> STEP <%= step %></p>
    <% end %>
  </div>
</div>
